\mode<presentation>

\definecolor{darkred}{rgb}{0.6,0,0}

\setbeamercolor{section in toc}{fg=black,bg=white}
\setbeamercolor{alerted text}{fg=darkred}
\setbeamercolor{block title}{bg=darkred}

\setbeamercolor*{palette primary}{bg=darkred,fg=white}                    % LHS BAR & TITLE FONT COLOR
\setbeamercolor*{palette secondary}{fg=darkred,bg=white}
\setbeamercolor*{palette tertiary}{bg=darkred,fg=white}
\setbeamercolor*{palette quaternary}{bg=darkred,fg=white}        % RHS BAR

\setbeamercolor*{sidebar}{fg=darkred,bg=white}

\setbeamercolor*{palette sidebar primary}{fg=darkred}
\setbeamercolor*{palette sidebar secondary}{fg=white}
\setbeamercolor*{palette sidebar tertiary}{fg=darkred}
\setbeamercolor*{palette sidebar quaternary}{fg=white}

%\setbeamercolor*{titlelike}{parent=palette primary}
\setbeamercolor{titlelike}{parent=pallette primary,fg=white,bg=darkred}
\setbeamercolor{frametitle}{bg=darkred}
\setbeamercolor{frametitle right}{bg=darkred}

\setbeamercolor*{separation line}{}
\setbeamercolor*{fine separation line}{}

\setbeamercolor*{item}{fg=darkred}

\mode
<all>